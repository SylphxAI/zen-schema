{
	"name": "@sylphx/zen-full",
	"version": "0.1.0",
	"description": "ðŸ§˜ Full-featured schema validation with 100% Zod v4 parity",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./fn": {
			"types": "./dist/fn.d.ts",
			"import": "./dist/fn.js"
		}
	},
	"files": ["dist", "README.md"],
	"scripts": {
		"build": "bun build ./src/index.ts ./src/fn.ts --outdir ./dist --target node --minify && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"test": "bun test",
		"bench": "bun run ./bench/index.ts",
		"typecheck": "tsc --noEmit"
	},
	"keywords": ["zen", "schema", "validation", "typescript", "type-inference", "standard-schema", "minimal", "fast"],
	"author": "Sylphx",
	"license": "MIT",
	"devDependencies": {
		"zod": "^4.1.13"
	},
	"peerDependencies": {
		"typescript": ">=5.0.0"
	}
}
