{
	"name": "@sylphx/vex",
	"version": "0.1.3",
	"description": "âš¡ Ultra-fast schema validation - 5x faster than Valibot, 30x faster than Zod",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target node --minify && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"test": "bun test",
		"bench": "bun run ./bench/index.ts",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"format": "biome format --write .",
		"prepublishOnly": "bunx @sylphx/doctor prepublish"
	},
	"keywords": [
		"vex",
		"schema",
		"validation",
		"typescript",
		"type-inference",
		"fast",
		"functional",
		"tree-shakeable"
	],
	"author": "Sylphx",
	"license": "MIT",
	"devDependencies": {
		"valibot": "^1.2.0",
		"zod": "^4.1.13"
	},
	"peerDependencies": {
		"typescript": ">=5.0.0"
	}
}
