{
	"name": "vex-monorepo",
	"description": "Ultra-fast schema validation - 90x faster than Zod",
	"private": true,
	"packageManager": "bun@1.3.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/SylphxAI/vex.git"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"test": "turbo test",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "turbo typecheck",
		"bench": "bun run --filter '@sylphx/vex' bench",
		"clean": "rm -rf packages/*/dist",
		"prepublishOnly": "bunx @sylphx/doctor prepublish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@sylphx/biome-config": "^0.4.1",
		"@sylphx/bump": "^1.5.2",
		"@sylphx/doctor": "^1.30.1",
		"@sylphx/tsconfig": "^0.3.1",
		"@types/bun": "^1.3.3",
		"lefthook": "^2.0.5",
		"turbo": "^2.6.1",
		"typescript": "^5.7.0"
	},
	"type": "module"
}
